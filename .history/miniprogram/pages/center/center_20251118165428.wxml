<view class="container-detail">
    <!-- 顶部个人信息 -->
    <view class="center-person">
        <view class="person-avator">
            <image src="{{avator}}" mode="aspectFill" />
        </view>
        <view class="person-information">
            <view class="person-name" wx:if="{{isLogin}}" bindtap="toPerson">{{uname}}</view>
            <view class="person-name person-login-btn" bindtap="onLogin" wx:else>点击登录 / 注册</view>
            <view class="person-id">ID：{{userId}}</view>
        </view>
    </view>

    <!-- 订单区块 -->
    <view class="center-section">
        <view class="section-header">
            <view class="section-title">我的订单</view>
        </view>
        <view class="section-content section-content-grid">
            <view class="section-item" bindtap="toTrand">
                <view class="section-item-icon">
                    <image src="../../images/icons/shangpin.png" mode="aspectFit" />
                </view>
                <view class="section-item-text">
                    <view class="section-item-title">发布的商品</view>
                    <view class="section-item-subtitle">共 {{postNumber}} 件</view>
                </view>
            </view>
            <view class="section-item" bindtap="toOrdersSell">
                <view class="section-item-icon">
                    <image src="../../images/icons/maichude.png" mode="aspectFit" />
                </view>
                <view class="section-item-text">
                    <view class="section-item-title">卖出的商品</view>
                    <view class="section-item-subtitle">查看成交记录</view>
                </view>
            </view>
            <view class="section-item" bindtap="toOrdersBuy">
                <view class="section-item-icon">
                    <image src="../../images/icons/icon-test.png" mode="aspectFit" />
                </view>
                <view class="section-item-text">
                    <view class="section-item-title">买到的商品</view>
                    <view class="section-item-subtitle">查看购买记录</view>
                </view>
            </view>
        </view>
    </view>

    <!-- 功能区块 -->
    <view class="center-section">
        <view class="section-header">
            <view class="section-title">功能服务</view>
        </view>
        <view class="section-content section-content-grid">
            <view class="section-item" wx:if="{{isAdmin}}" bindtap="toAdmin">
                <view class="section-item-icon">
                    <image src="../../images/icons/shequ.png" mode="aspectFit" />
                </view>
                <view class="section-item-text">
                    <view class="section-item-title">审核中心</view>
                    <view class="section-item-subtitle">管理平台发布内容</view>
                </view>
            </view>
            <view class="section-item">
                <view class="section-item-icon">
                    <image src="../../images/icons/shouhoufuwu.png" mode="aspectFit" />
                </view>
                <view class="section-item-text">
                    <view class="section-item-title">售后客服</view>
                    <view class="section-item-subtitle">遇到问题点这里</view>
                </view>
            </view>
            <view class="section-item">
                <view class="section-item-icon">
                    <image src="../../images/icons/pingtaishengming.png" mode="aspectFit" />
                </view>
                <view class="section-item-text">
                    <view class="section-item-title">平台声明</view>
                    <view class="section-item-subtitle">了解平台规则</view>
                </view>
            </view>
            <view class="section-item">
                <view class="section-item-icon">
                    <image src="../../images/icons/jiaruwomen.png" mode="aspectFit" />
                </view>
                <view class="section-item-text">
                    <view class="section-item-title">加入我们</view>
                    <view class="section-item-subtitle">成为校园合伙人</view>
                </view>
            </view>
        </view>
    </view>

    <!-- 底部宣传图 -->
    <view class="center-advertisement">
        <image src="../../images/second_call.png" mode="aspectFill" />
    </view>
</view>
